 		netvsc_send_tx_complete(net_device, incoming_channel,
 					device, packet);
 		break;
 
 	default:
 		netdev_err(ndev,
 			   "Unknown send completion type %d received!!\n",
 			   nvsp_packet->hdr.msg_type);
 	}
