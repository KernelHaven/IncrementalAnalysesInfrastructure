 enum dm_info_type {
 	INFO_TYPE_MAX_PAGE_CNT = 0,
 	MAX_INFO_TYPE
 };
 
 
 /*
  * Header for the information message.
  */
 
 struct dm_info_header {
 	enum dm_info_type type;
 	__u32 data_size;
 } __packed;
 
 /*
  * This message is sent from the host to the guest to pass
