-			lcd.addr.x = 0;
-			lcd.addr.y = 0;
-			lcd_gotoxy();
+			lcd_home();
 			processed = 1;
 		}
 		/* codes starting with ^[[L */
 		else if ((lcd.esc_seq.len >= 3) &&
 			 (lcd.esc_seq.buf[0] == '[') &&
 			 (lcd.esc_seq.buf[1] == 'L')) {
 			processed = handle_lcd_special_code();
 		}
 
 		/* LCD special escape codes */
 		/*
 		 * flush the escape sequence if it's been processed
 		 * or if it is getting too long.
