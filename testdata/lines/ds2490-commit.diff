 		/* result fits in less bytes */
 		if (cell->bytes != DIV_ROUND_UP(cell->nbits, BITS_PER_BYTE))
 			*p-- = 0;
 	}
 	/* clear msb bits if any leftover in the last byte */
 	*p &= GENMASK((cell->nbits%BITS_PER_BYTE) - 1, 0);
