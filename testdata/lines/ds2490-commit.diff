+		ret = of_platform_populate(child_np, NULL, dev_lookup, dev);
 		if (ret < 0)
 			goto error;
 	}
 
 	return 0;
 error:
 	clk_disable_unprepare(aemif->clk);
 	return ret;
 }
 
 static int aemif_remove(struct platform_device *pdev)
 {
 	struct aemif_device *aemif = platform_get_drvdata(pdev);
 
 	clk_disable_unprepare(aemif->clk);
 	return 0;
 }
 
