 	wake_up(&dev->wait_pg);
 
 	return 0;
 }
 
 /**
  * mei_hbm_pg_resume - process with PG resume
  *
  * @dev: the device structure.
  */
 void mei_hbm_pg_resume(struct mei_device *dev)
 {
 	pm_request_resume(dev->dev);
 }
