 		char buf[80];
 		char *name;
 
 		/* Count the size of mutually_exclusive array */
 		for (index = 0; edev->mutually_exclusive[index]; index++)
 			;
 
 		edev->attrs_muex = kzalloc(sizeof(struct attribute *) *
 					   (index + 1), GFP_KERNEL);
